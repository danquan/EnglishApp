<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Polygon?>

<?import javafx.scene.image.Image?>
<AnchorPane fx:id="game_sc" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@../css/wordle.css" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="main-screen" AnchorPane.bottomAnchor="15.0"
                    AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">

            <top>
                <VBox alignment="TOP_CENTER" minWidth="480.0">

                    <HBox alignment="CENTER" spacing="30.0">
                        <padding>
                            <Insets bottom="8" left="30"/>
                        </padding>
                        <ImageView fitHeight="50" fitWidth="50">
                        </ImageView>
                        <ImageView fx:id="helpButton" accessibleRole="BUTTON" fitHeight="50" fitWidth="50"
                                   onMouseClicked="#showHelp" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../game/images/help.png"/>
                            </image>
                        </ImageView>

                        <HBox fx:id="titleHBox" alignment="CENTER" prefHeight="50.0">
                            <padding>
                                <Insets bottom="8" left="27" right="30"/>
                            </padding>
                        </HBox>
                        <ImageView fx:id="restartButton" accessibleRole="BUTTON" fitHeight="50" fitWidth="50"
                                   onMouseClicked="#restart" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../game/images/restart.png"/>
                            </image>
                        </ImageView>
                        <ImageView fx:id="exitButton" accessibleRole="BUTTON" fitHeight="50" fitWidth="50"
                                   onMouseClicked="#exitGame" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../game/images/exit.png"/>
                            </image>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </ImageView>


                        <padding>
                            <Insets right="35"/>
                        </padding>
                    </HBox>
                </VBox>
            </top>

            <center>
                <VBox>
                    <BorderPane.margin>
                        <Insets bottom="15.0"/>
                    </BorderPane.margin>
                    <children>
                        <StackPane>
                            <children>
                                <ImageView fx:id="ImageAns" fitHeight="266.0" fitWidth="780.0" pickOnBounds="true"
                                           preserveRatio="true"/>
                            </children>
                        </StackPane>
                        <GridPane fx:id="gridPane" alignment="CENTER" focusTraversable="true" hgap="5"
                                  onKeyPressed="#onKeyPressed" prefHeight="83.0" prefWidth="780.0" vgap="5">
                            <columnConstraints>
                                <ColumnConstraints/>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                    </children>
                </VBox>
            </center>

            <bottom>
                <VBox>
                    <GridPane fx:id="keyboardRow1" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
                        <padding>
                            <Insets top="10.0"/>
                        </padding>
                    </GridPane>

                    <GridPane fx:id="keyboardRow2" alignment="BOTTOM_CENTER" hgap="4" vgap="2"/>

                    <GridPane fx:id="keyboardRow3" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
                        <padding>
                            <Insets bottom="10.0"/>
                        </padding>
                    </GridPane>
                </VBox>
            </bottom>

        </BorderPane>
        <BorderPane fx:id="notificationPane" focusTraversable="true" layoutX="163.0" layoutY="81.0" prefHeight="500"
                    prefWidth="500" visible="false"/>
    </children>
</AnchorPane>
